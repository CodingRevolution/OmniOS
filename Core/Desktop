QuickSettings.ButtonTable = {
	Close = {
		name = "Close",
		label = "Close",
		xPos = w-4,
		yPos = h-7,
		xLength = 5,
		yLength = 1,
		xTextPos = 1,
		yTextPos = 1,
		fgColor = colors.black,
		bgColor = colors.white,
