--Variables--
local textutilsserialize = textutils.serialize
local textutilsunserialize = textutils.unserialize
local w,h = term.getSize()

--Object table--
local ButtonTable = {
	quickSettings = {
		name = "quickSettings",
		label = ">",
		xPos = 1,
		yPos = h,
		xLength = 1,
		yLength = h,
		xTextPos = 1,
		yTextPos = 1,
		fgColor = colors.blue,
		bgColor = colors.lightGray,
		returnValue = "quickSettings",
	},
	windowPlus = {
		name = "windowPlus",
		label = "+",
		xPos = w,
		yPos = 1,
		xLength = 1,
		yLength = 1,
		xTextPos = 1,
		yTextPos = 1,
		fgColor = colors.blue,
		bgColor = colors.lightGray,
		returnValue = "windowPlus",
	},
	windowMinus = {
		name = "windowMinus",
		label = "-",
		xPos = 1,
		yPos = 1,
		xLength = 1,
		yLength = 1,
		xTextPos = 1,
		yTextPos = 1,
		fgColor = colors.blue,
		bgColor = colors.lightGray,
		returnValue = "windowMinus",
	},
}
local ToggleTable = {
	test = {
		name = "beu",
		state = false,
		xPos = 7,
		yPos = 8,
		trueColor = colors.green,
		falseColor = colors.red,
		trueText = "T",
		falseText = "F",
		selectedBg = colors.gray,
		notSelectedBg = colors.black,
		returnValue = "yyy",
	}
}

--Initializing GUI components
local gui = Interact.Initialize()
local mainLayout = gui.Layout.new()

--Initializing Buttons--
local quickSettings = gui.Button.new(ButtonTable.quickSettings)
local windowPlus = gui.Button.new(ButtonTable.windowPlus)
local windowMinus = gui.Button.new(ButtonTable.windowMinus)

--Initializing structures
mainLayout:addButton(quickSettings:returnData())
mainLayout:addButton(windowPlus:returnData())
mainLayout:addButton(windowMinus:returnData())


--Code--
while true do
	term.setBackgroundColor(colors.white)
	term.setTextColor(colors.black)
	term.setCursorPos(1,1)
	term.clear()
	mainLayout:draw()
	gui.eventHandler(mainLayout)
end