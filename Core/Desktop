--Variables--
local textutilsserialize = textutils.serialize
local textutilsunserialize = textutils.unserialize
local w,h = term.getSize()
local Settings = {}
local result = {}
local Main = {}
local QuickSettings = {}

--Functions--
local function readFile(_path)
	local file = fs.open(_path,"r")
	local data = file.readAll()
	file.close()
	return data
end

local function split(str,sep)
	local buffer = {}
	for token in str:gmatch(sep) do
		buffer[#buffer+1] = token
	end
	return buffer
end

--Loading settings--
local buffer = readFile("TheOS/Desktop/Settings")
Settings = textutils.unserialize( buffer )

--Object table--
Main.ButtonTable = {
	quickSettings = {
		name = "quickSettings",
		label = "^",
		xPos = 1,
		yPos = h,
		xLength = 1,
		yLength = 1,
		xTextPos = 1,
		yTextPos = 1,
		fgColor = colors.white,
		bgColor = Settings.bgColor,
		returnValue = "quickSettings",
	},
	windowPlus = {
		name = "windowPlus",
		label = ">",
		xPos = w,
		yPos = 1,
		xLength = 1,
		yLength = 1,
		xTextPos = 1,
		yTextPos = 1,
		fgColor = colors.white,
		bgColor = Settings.bgColor,
		returnValue = "windowPlus",
	},
	windowMinus = {
		name = "windowMinus",
		label = "<",
		xPos = 1,
		yPos = 1,
		xLength = 1,
		yLength = 1,
		xTextPos = 1,
		yTextPos = 1,
		fgColor = colors.white,
		bgColor = Settings.bgColor,
		returnValue = "windowMinus",
	},
}

