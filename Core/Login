--Variables--
local textutilsserialize = textutils.serialize
local textutilsunserialize = textutils.unserialize
local notLogin = true
local w,h = term.getSize()
term.redirect(term.native())
local user
local pass

--Code--
--Startup script--
term.setBackgroundColor(colors.white)
term.clear()
term.setCursorPos(1,1)
term.setTextColor(colors.black)
--Main Loop--

while notLogin do
	gui.resetButtons()
	gui.cPrint("Login",colors.black,nil,3,3)
	gui.cPrint("Username: >",colors.gray,nil,3,6)
	gui.cPrint("Password: >",colors.gray,nil,3,8)
	gui.addField(15,6,20,1,"userField")
	paintutils.drawFilledBox(15,6,35,6,colors.gray)
	gui.addField(15,8,20,1,"userField")
	paintutils.drawFilledBox(15,8,35,8,colors.gray)
	local result = gui.detectButtonOrKeyHit()
	print(textutilsserialize(result))
	sleep(3)
end