--[[
	Log API
	by Creator
	for TheOS
]]--

function log(destination,message,app)
	local finalMsg = "["..os.day()..":"..os.time().."]"
	if app then
		finalMsg = finalMsg..".["..app.."]:"..message
	else
		finalMsg = finalMsg..":"..message
	end
	local m = fs.open("TheOS/Logs/"..destination,"a")
	m.write(finalMsg.."\n")
	m.close()
end