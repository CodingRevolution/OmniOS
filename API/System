--[[
	System API
	for 
	TheOS
	by Creator
]]--

function reboot()
	os.reboot()
end

function newTask(name,title,...)
	local mainPath = "TheOS/Programs/"..name..".app/Main.lua"
	print(mainPath)
	if fs.exists(mainPath) then
		print("yeah")
		local func = loadfile(mainPath)
		local file = fs.open("TheOS/Programs/"..name..".app/permission.data")
		local permission = file.readAll()
		file.close()
		newRoutine(name,title,func,permission,...)
		os.pullEvent()
	end
	return false
end